#include <iostream>
#include <iomanip>
#include "boatloan.h"
#include "bankaccount.h"

BoatLoan::BoatLoan(){
  maxLootStorage=10;
  numOfCannons=10;
}

BoatLoan::BoatLoan(int storage, int cannons){
  maxLootStorage=storage;
  numOfCannons=cannons;
}

int BoatLoan::getMaxLootStorage(){
  return (maxLootStorage);
}

int BoatLoan::getNumOfCannons(){
  return (numOfCannons);
}
